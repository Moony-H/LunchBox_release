<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/fragment_location_search"
        layout="@layout/source_search_cardview"
        android:layout_height="50dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        />
    <ImageView
        android:id="@+id/fragment_location_under_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_main_under_bar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rectangle_round_left"
        android:contentDescription="@string/ImageViewStatic" />
    <ImageView
        android:id="@+id/fragment_location_character"
        android:layout_width="@dimen/size_main_egg_width"
        android:layout_height="@dimen/size_main_egg_height"
        android:src="@drawable/image_character_egg_non_slide"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/ImageViewStatic"/>

    <ImageView
        android:id="@+id/fragment_location_next"
        android:layout_width="@dimen/size_main_button_width_and_height"
        android:layout_height="@dimen/size_main_button_width_and_height"
        app:layout_constraintBottom_toTopOf="@id/fragment_location_character"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="@dimen/margin_main_button_right"
        android:layout_marginEnd="@dimen/margin_main_button_right"
        android:layout_marginBottom="@dimen/margin_main_button_bottom"
        android:contentDescription="@string/ImageViewStatic"
        android:src="@drawable/image_icon_next_button"
        />
    <ImageView
        android:id="@+id/fragment_location_user_position"
        android:layout_width="@dimen/size_main_button_width_and_height"
        android:layout_height="@dimen/size_main_button_width_and_height"
        app:layout_constraintBottom_toTopOf="@id/fragment_location_next"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_main_button_right"
        android:layout_marginEnd="@dimen/margin_main_button_right"
        android:layout_marginBottom="@dimen/margin_main_button_bottom"
        android:contentDescription="@string/ImageViewStatic"
        android:src="@drawable/image_icon_location_button"
        />
    <TextView
        android:id="@+id/fragment_location_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/fragment_location_under_bar"
        app:layout_constraintLeft_toLeftOf="@id/fragment_location_under_bar"
        app:layout_constraintRight_toRightOf="@id/fragment_location_under_bar"
        app:layout_constraintTop_toTopOf="@id/fragment_location_under_bar"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_square_eb"
        android:gravity="center"
        android:textSize="@dimen/size_thin"
        android:text="@string/text_main_address_loading"

        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/fragment_location_adview"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintTop_toBottomOf="@id/fragment_location_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adViewKey"

        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_location_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>