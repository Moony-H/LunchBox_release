<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fragment_restaurant_slide_up_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/ImageViewStatic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_restaurant_egg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_select_slideLayout_top"
        android:src="@drawable/rectangle_left_and_right_orange"

        />
    <ImageView
        android:id="@+id/fragment_restaurant_slide_up_white_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rectangle_left_and_right_white"
        app:layout_constraintTop_toTopOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintBottom_toBottomOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintLeft_toLeftOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintRight_toRightOf="@id/fragment_restaurant_slide_up_image"
        android:layout_marginTop="@dimen/margin_fragment_restaurant_slide_up_image_white_top"
        android:layout_marginLeft="@dimen/margin_fragment_restaurant_slide_up_image_white_left_and_right"
        android:layout_marginRight="@dimen/margin_fragment_restaurant_slide_up_image_white_left_and_right"

        android:contentDescription="@string/ImageViewStatic" />
    <TextView
        android:id="@+id/fragment_restaurant_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_dynamic"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintBottom_toTopOf="@id/fragment_restaurant_slide_up_white_image"
        android:textStyle="bold"

        android:layout_marginStart="25dp" />

    <WebView
        android:id="@+id/fragment_restaurant_slide_up_webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_fragment_restaurant_webView_top"
        android:layout_marginLeft="@dimen/margin_fragment_restaurant_webView_left"
        android:layout_marginRight="@dimen/margin_fragment_restaurant_webView_right"
        android:layout_marginStart="@dimen/margin_fragment_restaurant_webView_left"
        android:layout_marginEnd="@dimen/margin_fragment_restaurant_webView_right"
        app:layout_constraintTop_toTopOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintBottom_toBottomOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintLeft_toLeftOf="@id/fragment_restaurant_slide_up_image"
        app:layout_constraintRight_toRightOf="@id/fragment_restaurant_slide_up_image"
        />






    <ImageView
        android:id="@+id/fragment_restaurant_egg"
        android:layout_width="@dimen/size_select_egg_width"
        android:layout_height="@dimen/size_select_egg_height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_character_egg_slide"
        android:scaleType="fitXY"
        android:contentDescription="@string/ImageViewStatic"
        />

    <ImageView
        android:id="@+id/fragment_restaurant_close_button"
        android:layout_width="@dimen/size_select_restaurant_close_button_width_and_height"
        android:layout_height="@dimen/size_select_restaurant_close_button_width_and_height"
        app:layout_constraintLeft_toLeftOf="@id/fragment_restaurant_slide_up_webView"
        app:layout_constraintTop_toTopOf="@id/fragment_restaurant_slide_up_webView"
        android:scaleType="fitCenter"
        android:contentDescription="@string/ImageViewStatic"
        android:src="@drawable/button_cross"
        />


</androidx.constraintlayout.widget.ConstraintLayout>