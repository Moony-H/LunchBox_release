<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main">
    <TextView
        android:id="@+id/source_tutorial_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="@string/text_dynamic"
        android:fontFamily="@font/nanum_square_eb"
        android:textSize="@dimen/size_tutorial_title"
        />
    <TextView
        android:id="@+id/source_tutorial_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/source_tutorial_main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/text_dynamic"
        android:fontFamily="@font/nanum_square_b"
        android:textSize="@dimen/size_tutorial_sub_title"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_source_tutorial_sub_title_text_top"
        />
    <ImageView
        android:id="@+id/source_tutorial_guid_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/source_tutorial_sub_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:src="@color/white"
        android:layout_marginTop="@dimen/margin_source_tutorial_image_view_top"
        android:scaleType="fitCenter"
        android:contentDescription="@string/ImageViewDynamic"

         />

</androidx.constraintlayout.widget.ConstraintLayout>